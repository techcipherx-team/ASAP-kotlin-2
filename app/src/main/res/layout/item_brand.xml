<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Brand logo -->
    <ImageView
        android:id="@+id/ivBrandLogo"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:background="@drawable/brand_logo_background"
        android:clipToOutline="true"
        android:contentDescription="@string/brand_logo_description"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />


    <!-- Brand info and button container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Brand name and favorite icon row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skims"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true" />

            <!-- Heart/Favorite icon -->
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="@string/favorite_description" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvBrandCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beauty, Skincare"
            android:textSize="15sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp" />

        <!-- Email button -->
        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#0098FD"
            android:textAllCaps="false"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</LinearLayout>
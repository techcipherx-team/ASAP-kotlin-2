<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <!-- Header with hamburger menu, logo, and lightning icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingTop="40dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ivHamburger"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_hamburger"
            android:contentDescription="@string/menu_description" />

        <ImageView
            android:id="@+id/tvLogo"
            android:layout_width="130dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:src="@drawable/center_logo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/ivMailInbox"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/mail"
            android:contentDescription="Mail" />

        <ImageView
            android:id="@+id/ivLightning"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivMailInbox"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_lightning"
            android:contentDescription="@string/lightning_description" />

    </RelativeLayout>

    <!-- Category tabs (horizontal scrollable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

    <!-- Search bar -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/search_background"
        android:hint="Search for brands"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:textSize="16sp"
        android:textColorHint="#9E9E9E" />

    <!-- Brands list (vertical scrollable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBrands"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

</LinearLayout>

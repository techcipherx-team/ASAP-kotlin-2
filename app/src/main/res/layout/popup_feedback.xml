<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="30dp"
    android:gravity="center">

    <!-- Handle bar at top -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#CCCCCC"
        android:layout_marginBottom="30dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="30dp"
        android:scaleType="centerInside" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoying the app?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us know what you think!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp" />

    <!-- Yes, I love it! Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginBottom="15dp">

        <FrameLayout
            android:id="@+id/btnYesLoveIt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/ivYesBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/button_background"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Yes, I love it!"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAllCaps="false" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Not so much Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E0E0E0">

        <Button
            android:id="@+id/btnNotSoMuch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Not so much"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:stateListAnimator="@null" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
